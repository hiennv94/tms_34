<% provide :title, t("supervisor.users.all_users") %>
<div class="page-header">
  <h2><%= t"supervisor.users.all_trainees" %></h2>
  <button class="btn btn-default"><%= link_to t("supervisor.users.new_trainee"), new_supervisor_user_path %></button>
</div>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t "application.model.nameShow" %></th>
      <th><%= t "application.model.emailShow" %></th>
      <th><%= t "supervisor.users.progress"%></th>
      <th><%= t "supervisor.users.edit" %></th>
      <th><%= t "supervisor.users.delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t("supervisor.users.view_progress"), supervisor_user_path(user), class: "btn btn-info", data: {toggle:"modal", target: "#traineeProgress", remote: true, method: :get} %></td>
        <td><%= link_to t("supervisor.users.edit"), edit_supervisor_user_path(user), class: "btn btn-primary" %></td>
        <td><%= link_to t("supervisor.users.delete"), supervisor_user_path(user), method: :delete, data: {confirm: t("supervisor.users.delete_confirm")}, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<div id="traineeProgress" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t "application.general.title_trainee_progress" %></h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "application.general.close_trainee_progress" %></button>
      </div>
    </div>
  </div>
</div>
