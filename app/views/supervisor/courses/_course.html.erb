<tr class="center">
  <td><%= course.name %></td>
  <td><%= course.status %></td>
  <td><%= link_to t("application.button.up_subject"),
    supervisor_course_course_subjects_path(course), class: "btn btn-primary" %></td>
  <td><%= course.start_date %></td>
  <td><%= course.end_date %></td>
  <td>
    <% if course.owner == current_user %>
      <span class="label label-danger"><%= t "application.label.owner"%></span>
    <% elsif course.users.include? current_user %>
      <span class="label label-success"><%= t "application.label.super" %></span>
    <% else %>
      <span class="label label-warning"><%= t "application.lable.other"%></span>
    <% end %>
  </td>
  <td>
    <% if course.pending? %>
      <%= form_for [:supervisor,course] do |f| %>
        <%= f.hidden_field :status, value: :starting %>
        <%= f.submit t("supervisor.courses.index.start"), class: "btn btn-success col-md-8" %>
      <% end %>
    <% elsif course.starting? %>
      <%= form_for [:supervisor, course] do |f| %>
        <%= f.hidden_field :status, value: :finished %>
        <%= f.submit t("supervisor.courses.index.finished"), class: "btn btn-danger col-md-8" %>
      <% end %>
    <% else %>
      <span class="label label-default"><%= t "supervisor.courses.index.finished" %></span>
    <% end %>
  </td>
  <td>
    <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <% if course.owner == current_user %>
      <li>
        <%= link_to t("application.button.edit"), edit_supervisor_course_path(course) %>
      </li>
      <li>
        <%= link_to t("application.button.delete"), supervisor_course_path(course),method: :delete, data: {confirm: t("application.general.confirm")} %>
      </li>
      <% end %>
      <li>
        <%= link_to t("application.button.show"),
          supervisor_course_path(course) %>
      </li>
      <li>
        <%= link_to t("supervisor.user_courses.add_trainee"),
          supervisor_course_assign_trainee_path(course) %>
      </li>
      <li><%= link_to t("application.button.show_trainee"),
        supervisor_course_assign_trainees_path(course) %></li>
      <li><%= link_to t("supervisor.user_courses.add_supervisor"),
        supervisor_course_assign_supervisors_path(course) %></li>
    </ul>
    </div>
  </td>
</tr>
